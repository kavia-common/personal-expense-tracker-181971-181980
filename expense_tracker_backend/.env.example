# Database (PostgreSQL) - preferred: use DATABASE_URL
# Example: postgresql://appuser:dbuser123@localhost:5001/myapp
DATABASE_URL=

# Or specify individual variables (port defaults to 5001 if omitted)
POSTGRES_HOST=localhost
POSTGRES_PORT=5001
POSTGRES_DB=myapp
POSTGRES_USER=appuser
POSTGRES_PASSWORD=dbuser123

# App port
PORT=3001

# JWT lifetimes (optional)
JWT_ACCESS_MINUTES=30
JWT_REFRESH_DAYS=7

# OpenAPI server URL hints (optional)
API_SCHEME=http
API_HOST=localhost
API_PORT=3001

# Frontend origin additions (optional)
FRONTEND_ORIGIN=
